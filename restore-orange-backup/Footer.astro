      <!-- Contact -->
      <div>
        <h4 class="text-sm font-semibold uppercase tracking-wider mb-4">Get in Touch</h4>
        <ul class="space-y-2 text-sm text-gray-400">
          <li>Email: tony.cooper@webuildstores.co.uk</li>
