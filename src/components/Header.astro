---
import { Image } from 'astro:assets';
import logo from '../assets/logo.png';
---

<header class="bg-white shadow-sm sticky top-0 z-50">
  <!-- Top Bar -->
  <div class="bg-gray-900 text-white text-sm">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-2">
        <div class="flex items-center gap-6">
          <a href="tel:01952407599" class="flex items-center gap-2 hover:text-orange-500">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            01952 407599
          </a>
          <a href="mailto:tony.cooper@webuildstores.co.uk" class="flex items-center gap-2 hover:text-orange-500">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            tony.cooper@webuildstores.co.uk
          </a>
        </div>
        <div class="flex items-center gap-4">
          <a href="https://www.facebook.com/storebuilderuk" target="_blank" rel="noopener noreferrer" class="hover:text-orange-500" aria-label="Follow us on Facebook">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a href="https://x.com/storebuilderuk" target="_blank" rel="noopener noreferrer" class="hover:text-orange-500" aria-label="Follow us on X (Twitter)">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
          <a href="https://www.linkedin.com/in/storebuilderuk/" target="_blank" rel="noopener noreferrer" class="hover:text-orange-500" aria-label="Connect with us on LinkedIn">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Navigation -->
  <nav class="bg-white">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <!-- Logo -->
          <a href="/" class="flex items-center gap-3">
            <Image src={logo} alt="We Build Stores" class="h-14 w-14" width={56} height={56} />
            <span class="text-2xl font-bold">
              <span class="text-gray-900">We Build</span>
              <span class="text-orange-500"> Stores</span>
            </span>
          </a>
        </div>
        
        <!-- Desktop Navigation -->
        <div class="hidden md:flex items-center space-x-8">
          <a href="/" class="text-gray-700 hover:text-orange-500 px-3 py-2 text-sm font-medium">
            Home
          </a>
          <div class="relative group">
            <button class="text-gray-700 hover:text-orange-500 px-3 py-2 text-sm font-medium inline-flex items-center">
              Services
              <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <div class="absolute left-0 mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
              <div class="py-1">
                <a href="/website-design" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-orange-500">Website Design</a>
                <a href="/seo-campaign-management" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-orange-500">SEO Services</a>
                <a href="/pay-per-click" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-orange-500">Pay Per Click</a>
                <a href="/social-media-plans" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-orange-500">Social Media</a>
                <a href="/content-writing-services" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-orange-500">Content Writing</a>
                <a href="/logo-design" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-orange-500">Logo Design</a>
              </div>
            </div>
          </div>
          <a href="/blog" class="text-gray-700 hover:text-orange-500 px-3 py-2 text-sm font-medium">
            Blog
          </a>
          <div class="relative group">
            <button class="relative group px-4 py-2 text-sm font-medium inline-flex items-center">
              <span class="relative z-10 bg-gradient-to-r from-orange-500 to-blue-900 bg-clip-text text-transparent group-hover:from-orange-500 group-hover:to-blue-900 transition-all">
                Growth Plans
              </span>
              <svg class="ml-1 h-4 w-4 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
              <div class="absolute inset-0 bg-gradient-to-r from-orange-500/10 to-blue-900/10 rounded-md transform scale-x-0 group-hover:scale-x-100 transition-transform origin-left"></div>
            </button>
            <div class="absolute left-0 mt-2 w-64 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
              <div class="py-1">
                <a href="/trades-growth" class="block px-4 py-3 text-sm text-gray-700 hover:bg-gray-100 hover:text-orange-500">
                  <div class="font-semibold">Trades Growth</div>
                  <div class="text-xs text-gray-500">For local tradespeople • From £49/mo</div>
                </a>
                <a href="/business-growth-package" class="block px-4 py-3 text-sm text-gray-700 hover:bg-gray-100 hover:text-orange-500">
                  <div class="font-semibold">Business Intelligence</div>
                  <div class="text-xs text-gray-500">For established SMEs • From £330/mo</div>
                </a>
              </div>
            </div>
          </div>
          <a href="/about-us" class="text-gray-700 hover:text-orange-500 px-3 py-2 text-sm font-medium">
            About
          </a>
          <a href="https://conductor.webuildstores.co.uk" class="text-gray-700 hover:text-orange-500 px-3 py-2 text-sm font-medium inline-flex items-center">
            Client Portal
            <svg class="ml-1 h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
          </a>
          <a href="/contact" class="bg-orange-500 text-white px-6 py-2 rounded text-sm font-medium hover:bg-blue-950 transition-colors">
            Get Started
          </a>
        </div>
        
        <!-- Mobile menu button -->
        <div class="md:hidden flex items-center">
          <button type="button" class="mobile-menu-button inline-flex items-center justify-center p-2 rounded-md text-gray-700 hover:text-orange-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-900">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
    
    <!-- Mobile menu -->
    <div class="mobile-menu hidden md:hidden">
      <div class="px-2 pt-2 pb-3 space-y-1">
        <a href="/" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-orange-500 hover:bg-gray-50">Home</a>
        <a href="/website-design" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-orange-500 hover:bg-gray-50">Website Design</a>
        <a href="/seo-campaign-management" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-orange-500 hover:bg-gray-50">SEO Services</a>
        <div class="px-3 py-2">
          <div class="text-base font-medium bg-gradient-to-r from-orange-500 to-blue-900 bg-clip-text text-transparent mb-2">Growth Plans</div>
          <a href="/trades-growth" class="block px-3 py-2 rounded-md text-sm text-gray-700 hover:text-orange-500 hover:bg-gray-50">Trades Growth (From £49/mo)</a>
          <a href="/business-growth-package" class="block px-3 py-2 rounded-md text-sm text-gray-700 hover:text-orange-500 hover:bg-gray-50">Business Intelligence (From £330/mo)</a>
        </div>
        <a href="/blog" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-orange-500 hover:bg-gray-50">Blog</a>
        <a href="/about-us" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-orange-500 hover:bg-gray-50">About</a>
        <a href="https://conductor.webuildstores.co.uk" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-orange-500 hover:bg-gray-50">Client Portal</a>
        <a href="/contact" class="block px-3 py-2 rounded-md text-base font-medium bg-orange-500 text-white hover:bg-blue-950">Get Started</a>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.querySelector('.mobile-menu-button');
  const mobileMenu = document.querySelector('.mobile-menu');
  
  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>