---
import GuaranteeSection from './GuaranteeSection.astro';
const currentYear = new Date().getFullYear();
---

<GuaranteeSection />

<footer class="bg-gray-900 text-white">
  <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8">
      <!-- Company Info -->
      <div class="space-y-4">
        <h3 class="text-lg font-semibold">We Build Stores</h3>
        <p class="text-sm text-gray-400">
          Professional web design and SEO services with over 25 years of experience.
        </p>
      </div>
      
      <!-- Services -->
      <div>
        <h4 class="text-sm font-semibold uppercase tracking-wider mb-4">Services</h4>
        <ul class="space-y-2">
          <li><a href="/website-design" class="text-sm text-gray-400 hover:text-white transition-colors">Website Design</a></li>
          <li><a href="/ecommerce-design" class="text-sm text-gray-400 hover:text-white transition-colors">Ecommerce Development</a></li>
          <li><a href="/seo-campaign-management" class="text-sm text-gray-400 hover:text-white transition-colors">SEO Services</a></li>
          <li><a href="/graphic-design" class="text-sm text-gray-400 hover:text-white transition-colors">Graphic Design</a></li>
        </ul>
      </div>
      
      <!-- Growth Plans -->
      <div>
        <h4 class="text-sm font-semibold uppercase tracking-wider mb-4">Growth Plans</h4>
        <ul class="space-y-2">
          <li><a href="/business-growth-package" class="text-sm text-gray-400 hover:text-white transition-colors">View All Plans</a></li>
          <li><a href="/business-growth-package#breakthrough" class="text-sm text-gray-400 hover:text-white transition-colors">Breakthrough £330</a></li>
          <li><a href="/business-growth-package#trailblazer" class="text-sm text-gray-400 hover:text-white transition-colors">Trailblazer £595</a></li>
          <li><a href="/business-growth-package#torchbearer" class="text-sm text-gray-400 hover:text-white transition-colors">Torch Bearer £995</a></li>
        </ul>
      </div>
      
      <!-- Company -->
      <div>
        <h4 class="text-sm font-semibold uppercase tracking-wider mb-4">Company</h4>
        <ul class="space-y-2">
          <li><a href="/about" class="text-sm text-gray-400 hover:text-white transition-colors">About Us</a></li>
          <li><a href="/blog" class="text-sm text-gray-400 hover:text-white transition-colors">Blog</a></li>
          <li><a href="/contact" class="text-sm text-gray-400 hover:text-white transition-colors">Contact</a></li>
          <li><a href="https://conductor.webuildstores.co.uk/client/login-secure/" class="text-sm text-gray-400 hover:text-white transition-colors">Client Portal</a></li>
        </ul>
      </div>
      
      <!-- Contact -->
      <div>
        <h4 class="text-sm font-semibold uppercase tracking-wider mb-4">Get in Touch</h4>
        <ul class="space-y-2 text-sm text-gray-400">
          <li>Email: tony.cooper@webuildstores.co.uk</li>
          <li>Location: Telford, UK</li>
        </ul>
        <div class="mt-4">
          <h4 class="text-sm font-semibold uppercase tracking-wider mb-3">Follow Us</h4>
          <div class="flex space-x-4">
            <a 
              href="https://www.facebook.com/storebuilderuk" 
              target="_blank" 
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-white transition-colors"
              aria-label="Follow us on Facebook"
            >
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd" />
              </svg>
            </a>
            <a 
              href="https://x.com/storebuilderuk" 
              target="_blank" 
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-white transition-colors"
              aria-label="Follow us on X (Twitter)"
            >
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
    
    <div class="mt-8 pt-8 border-t border-gray-800">
      <p class="text-center text-sm text-gray-400">
        © {currentYear} We Build Stores. All rights reserved.
      </p>
    </div>
  </div>
</footer>