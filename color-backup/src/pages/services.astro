---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const services = [
  {
    title: 'Website Design',
    description: 'Beautiful, responsive websites that convert visitors into customers.',
    icon: 'M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z',
    link: '/website-design',
    features: ['Responsive Design', 'SEO Optimized', 'Fast Loading', 'User-Friendly']
  },
  {
    title: 'Ecommerce Development',
    description: 'Powerful online stores built on leading platforms.',
    icon: 'M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z',
    link: '/ecommerce-website-design-telford',
    features: ['Shopify', 'WooCommerce', 'Payment Integration', 'Inventory Management']
  },
  {
    title: 'SEO Campaign Management',
    description: 'Get found on Google with our proven SEO strategies.',
    icon: 'M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z',
    link: '/seo-campaign-management',
    features: ['Keyword Research', 'On-Page SEO', 'Link Building', 'Monthly Reporting']
  },
  {
    title: 'Content Writing',
    description: 'Engaging content that speaks to your audience.',
    icon: 'M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253',
    link: '/content-writing-services',
    features: ['Blog Writing', 'SEO Copywriting', 'Product Descriptions', 'Website Content']
  },
  {
    title: 'Graphic Design',
    description: 'Professional designs that make your brand stand out.',
    icon: 'M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z',
    link: '/graphic-design',
    features: ['Logo Design', 'Brand Identity', 'Marketing Materials', 'Social Media Graphics']
  },
  {
    title: 'Social Media Marketing',
    description: 'Build your brand and engage with your audience.',
    icon: 'M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z',
    link: '/social-media-plans',
    features: ['Content Creation', 'Community Management', 'Paid Advertising', 'Analytics']
  }
];
---

<BaseLayout title="Our Services - Web Design, SEO & Digital Marketing" description="Explore our comprehensive range of digital services including web design, ecommerce development, SEO, content writing, and more.">
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-wbs-blue to-blue-900 text-white py-16">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl md:text-5xl font-bold mb-4">
            Our Services
          </h1>
          <p class="text-xl max-w-2xl mx-auto">
            Everything you need to build a successful online presence and grow your business
          </p>
        </div>
      </div>
    </section>
    
    <!-- Services Grid -->
    <section class="py-16">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {services.map((service) => (
            <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
              <div class="p-6">
                <div class="w-12 h-12 bg-purple-700 rounded-lg flex items-center justify-center mb-4">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={service.icon}></path>
                  </svg>
                </div>
                <h2 class="text-2xl font-semibold mb-2">{service.title}</h2>
                <p class="text-gray-600 mb-4">{service.description}</p>
                <ul class="mb-6 space-y-2">
                  {service.features.map((feature) => (
                    <li class="flex items-center text-sm text-gray-600">
                      <svg class="w-4 h-4 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                      {feature}
                    </li>
                  ))}
                </ul>
                <a href={service.link} class="inline-flex items-center text-purple-700 hover:text-purple-800 font-medium">
                  Learn More
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
    
    <!-- Additional Services -->
    <section class="py-16 bg-gray-50">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-center mb-12">Additional Services</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold mb-2">Pay Monthly Websites</h3>
            <p class="text-gray-600 mb-4">Affordable website solutions with no upfront costs. Perfect for startups and small businesses.</p>
            <a href="/pay-monthly-websites" class="text-purple-700 hover:text-purple-800 font-medium">View Plans →</a>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold mb-2">Website Redesign</h3>
            <p class="text-gray-600 mb-4">Breathe new life into your existing website with a modern, conversion-focused redesign.</p>
            <a href="/website-redesign" class="text-purple-700 hover:text-purple-800 font-medium">Learn More →</a>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold mb-2">Pay Per Click Advertising</h3>
            <p class="text-gray-600 mb-4">Drive immediate traffic and conversions with expertly managed PPC campaigns.</p>
            <a href="/pay-per-click" class="text-purple-700 hover:text-purple-800 font-medium">Get Started →</a>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-semibold mb-2">Google My Business</h3>
            <p class="text-gray-600 mb-4">Optimize your local presence and attract more customers with Google My Business management.</p>
            <a href="/google-my-business" class="text-purple-700 hover:text-purple-800 font-medium">Learn More →</a>
          </div>
        </div>
      </div>
    </section>
    
    <!-- CTA Section -->
    <section class="py-16 bg-wbs-blue text-white">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold mb-4">Ready to Get Started?</h2>
        <p class="text-xl mb-8 max-w-2xl mx-auto">
          Let's discuss your project and find the perfect solution for your business needs.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-wbs-blue bg-white hover:bg-gray-100 transition-colors">
            Get a Free Quote
          </a>
          <a href="/plans-pricing" class="inline-flex items-center justify-center px-6 py-3 border-2 border-white text-base font-medium rounded-md text-white hover:bg-white hover:text-wbs-blue transition-colors">
            View Pricing
          </a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>